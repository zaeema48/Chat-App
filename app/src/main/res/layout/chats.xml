<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#F5201F1F"
    android:id="@+id/chatContent">

    <androidx.cardview.widget.CardView
        android:id="@+id/getUserImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="70dp">

        <ImageView
            android:id="@+id/getUserImageinImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/getUserImage"
        android:padding="5dp"
        android:text="Sample Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/getUserImage"
        android:layout_below="@id/username"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/getUserImage"
        android:layout_toLeftOf="@id/msgTime"
        android:paddingBottom="10dp"
        android:text="Tap to chat"
        android:textSize="15dp"
        android:textColor="#DFD4D4"/>

    <TextView
        android:id="@+id/msgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="10dp"
        android:text="12:24 AM"
        android:textSize="15dp"
        android:textColor="#DFD4D4"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/getUserImage"
        android:layout_marginTop="5dp"
        android:background="#DC5E5959" />
</RelativeLayout>